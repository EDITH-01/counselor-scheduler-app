{
  "routes": [

    {
      "route": "/",
      "allowedRoles": ["authenticated"],
      "redirect": "/admin" 
    },

    

    {
      "route": "/api/*",
      "allowedRoles": ["authenticated", "student", "counselor", "admin"],
      "methods": ["GET", "POST", "PUT", "DELETE"]
    }
  ],
  
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/static/*", "/assets/*"]
  },
  
  "globalHeaders": {
    "Cache-Control": "no-cache, no-store, must-revalidate, max-age=0"
  },
  
  "responseOverrides": {

    "401": {
      "statusCode": 302,
      "redirect": "/.auth/login/aad" 
    },

    "403": {
      "statusCode": 403,
      "rewrite": "/unauthorized.html"
    }
  }
}